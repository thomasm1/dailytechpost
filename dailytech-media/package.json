{
  "name": "dailytech-media",
  "version": "1.0.0",
  "description": "Daily Tech Media Platform - French-style radio streaming with rating system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "db:init": "PGPASSWORD=radio_pass psql -h localhost -U radio_user -d radio_db -f database/init.sql",
    "test": "jest --testTimeout=30000",
    "test:watch": "jest --watch --testTimeout=30000",
    "test:backend": "jest tests/backend --testTimeout=30000",
    "test:frontend": "jest tests/frontend --testTimeout=30000",
    "test:integration": "jest tests/integration --testTimeout=60000",
    "test:coverage": "jest --coverage --testTimeout=30000",
    "test:ci": "jest --ci --coverage --testTimeout=30000 --forceExit",
    "test:debug": "jest --runInBand --verbose --testTimeout=30000",
    "db:test:init": "TEST_DB_NAME=radio_db_test npm run db:init",
    "db:test:create": "PGPASSWORD=radio_pass createdb -h localhost -U radio_user radio_db_test 2>/dev/null || true"
  },
  "keywords": [
    "radio",
    "streaming",
    "hls",
    "media",
    "rating",
    "postgresql"
  ],
  "author": "Thomas Milton Maestas",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "server.js",
      "public/js/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/utils/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "verbose": true,
    "projects": [
      {
        "displayName": "backend",
        "testMatch": [
          "<rootDir>/tests/backend/**/*.test.js"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "frontend",
        "testMatch": [
          "<rootDir>/tests/frontend/**/*.test.js"
        ],
        "testEnvironment": "jsdom"
      },
      {
        "displayName": "integration",
        "testMatch": [
          "<rootDir>/tests/integration/**/*.test.js"
        ],
        "testEnvironment": "node"
      }
    ]
  }
}
